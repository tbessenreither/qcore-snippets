{
    "scopeName": "html.qcore",
    "injectionSelector": "L:text.html.derivative, L:text.html.php",
    "patterns": [
        { "include": "#batlethStart" },
        { "include": "#batlethEnd" }
    ],
    "repository": {
        "batlethStart": {
			"match": "({{\\/?[\\w_]+(?:\\:\\:[^\\|\\?]+)*(?:\\?[^|\\#]+)*(?:[\\|][\\w\\d= $\\.]+)*}})",
			"name": "entity.name.function.batlethStart"
		},
		"batlethEnd": {
			"match": "{{/(?:[\\w_]+)}}",
			"name": "entity.name.function.batlethEnd"
		}
    }
}